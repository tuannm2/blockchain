<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.screen.ConnectWalletScreen"
    android:background="@color/ChainverseColorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/chainverse_button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:src="@drawable/chainverse_ic_close_screen"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"/>
    </RelativeLayout>


    <ImageView
        android:layout_width="180dp"
        android:layout_height="280dp"
        android:src="@drawable/chainverse_logo"
        android:layout_centerInParent="true"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="16dp">
        <Button
            android:id="@+id/chainverse_button_import"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/chainverse_background_button_import"
            android:text="I ALREADY HAVE A WALLET"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            style="?android:attr/borderlessButtonStyle"
            android:visibility="visible"/>

        <Button
            android:id="@+id/chainverse_button_create"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chainverse_background_button_create_new"
            android:text="CREATE A NEW WALLET"
            android:textColor="@color/ChainverseColorPrimary"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>




</RelativeLayout>